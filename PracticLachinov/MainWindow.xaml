<Window x:Class="PracticLachinov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticLachinov"
        mc:Ignorable="d"
        Title="Лопушок" Height="450" Width="800" Icon="products/logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="350*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#CEFFF9">
            <StackPanel Orientation="Horizontal">
                <Image Source="products/logo.png" Margin="10" HorizontalAlignment="Left"/>
                <Label Content="Лопушок"  Style="{StaticResource MainLabel}" Margin="0,10,10,10"/>
                <Button Content="Назад"  Style="{StaticResource MainButton}" Margin="350,10,10,10" Name="BtnBack" Click="BtnBack_Click"/>
            </StackPanel>
        </Grid>
        <Frame Name="FrmMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
